{
  "compilerOptions": {
    "target": "esnext",                    // Specifies the output JavaScript version
    "module": "commonjs",                  // Module system for Node.js
    "jsx": "react",                        // Support for JSX
    "outDir": "./dist",                    // Output directory for compiled JavaScript
    "rootDir": "./src",                    // Specifies the root directory of your input files
    "strict": true,                        // Enable strict type-checking options
    "esModuleInterop": true,               // Import compatibility
    "skipLibCheck": true,                  // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "lib": ["esnext", "dom"],
    "allowJs": true
  },
  "include": ["src", "App.tsx"],
  "exclude": ["node_modules"]
}